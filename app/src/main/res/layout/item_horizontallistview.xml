<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/xsq_img"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xsq_jiage_new"
            android:layout_centerVertical="true"
            android:text="@string/xsq_jiage_new"
            android:textSize="20sp"
            android:textColor="@color/xsq_jishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xsq_jiage_old"
            android:text="@string/xsq_jiage_old"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/xianshiqiang_tv_bg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>